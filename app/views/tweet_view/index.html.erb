<div class="content">
  <% @index = 0 %>
  <% @tweets.each do |tweet| %>
    <div class="tweet" id='tweet-<%="#{@index}" %>'>
        <a href="<%= tweet.url %>">
        <div class="image-block">
          <img src='<%= tweet.user.profile_image_uri(size = :original) %>' class="prof-img"/>
        </div>
        <div class="tweet-text">
          <%= "#{tweet.user.screen_name}: #{tweet.text[0..tweet.text.index('https://').to_i-1]}"%>
        </div>
      </a>
    </div>
    <% @index += 1 %>
  <% end %>
</div>
